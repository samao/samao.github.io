vw(pxVal)
    return unit((pxVal / 750) * 100, 'vw')

body, html
    background: #fff
    margin: 0

    *
        box-sizing: border-box
        margin: 0
        padding: 0

.law
    background: #FFFFFF 100%
    height: 100%
    padding: vw(53) vw(36) vw(36)
    word-break: break-all
    color: #333
    font-size: vw(24)
    line-height: vw(40)

    h1
        font-size: vw(42)
        line-height: vw(48)
        margin-bottom: vw(18)